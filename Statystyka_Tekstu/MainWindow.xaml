<Window x:Class="Statystyka_Tekstu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Statystyka_Tekstu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="310.4">
    <Grid>
        <Button x:Name="Readfile" Content="Wczytaj plik tekstowy" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="149" Click="Readfile_Click"/>
        <Button x:Name="StartButton" Content="Oblicz statystykę" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="190,10,0,0" Click="StartButton_Click"/>
        <TextBox x:Name="StatOutput" HorizontalAlignment="Left" Height="374" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286"/>

    </Grid>
</Window>
